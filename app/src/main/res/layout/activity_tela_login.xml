<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.almeida.tcc.Tela_login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/usuario_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login:"

            android:layout_marginTop="114dp"
            android:layout_marginLeft="210dp"
            android:layout_marginStart="210dp"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/usuario_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_alignTop="@+id/usuario_tv"
            android:layout_toRightOf="@+id/usuario_tv"
            android:layout_toEndOf="@+id/usuario_tv"
            android:layout_marginLeft="51dp"
            android:layout_marginStart="51dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button"
            android:onClick="login"
            android:layout_below="@+id/carro_et"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="109dp" />

        <TextView
            android:layout_alignLeft="@+id/usuario_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carro:"
            android:id="@+id/textView4"
            android:layout_below="@+id/usuario_et"
            android:textSize="30dp"/>

        <EditText
            android:id="@+id/carro_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/textView4"
            android:layout_alignLeft="@+id/usuario_et"
            android:layout_alignStart="@+id/usuario_et" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testa nome"
            android:id="@+id/button2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:onClick="testaSocket"/>

    </RelativeLayout>
</FrameLayout>
